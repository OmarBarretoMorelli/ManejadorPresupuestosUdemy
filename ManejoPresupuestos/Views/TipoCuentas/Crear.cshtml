@model TipoCuenta

@{
    ViewData["title"] = "Crear Tipo Cuenta";
}

<h1 class="mb-3">Crear Tipo Cuenta</h1>
<p>Un tipo de cuenta se refiere a como podemos agrupar nuestras cuentas.
    Ejemplos: prestamos, tarjetas, efectivo, cuenta bancaria, etc.
</p>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Crear" asp-controller="TipoCuentas">
    <div class="mb-3">
        <label class="form-label" asp-for="Nombre">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
