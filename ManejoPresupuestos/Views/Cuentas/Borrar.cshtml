@model Cuenta

@{
    ViewData["Title"] = "Borrar Cuenta";
}


<h3 class="mb-3">¿Esta seguro que desea borrar la cuenta @Model.Nombre?</h3>

<form asp-action="BorrarCuenta" asp-controller="Cuentas">
    <input type="hidden" asp-for="Id" />
    <input type="submit" class="btn btn-primary" />
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Cuentas">Cancelar</a>
</form>