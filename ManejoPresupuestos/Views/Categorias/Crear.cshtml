@model Categoria

@{
    ViewData["Title"] = "Crear categoria";
}

<h1>Crear categoria</h1>
<h5>Una categoria nos permite indicar de donde provienen nuestros ingreso y en que gastamos nuestro dinero.</h5>

<form asp-action="Crear" asp-controller="Categorias">
    <div asp-validation-summary="ModelOnly" class="Text-danger"></div>

    <div class="mb-3">
        <label class="form-label" asp-for="Nombre"></label>
        <input class="form-control" asp-for="Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="TipoOperacionId"></label>
        <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacion>()" class="form-select"></select>
        <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}